<!DOCTYPE html>
<html lang="es" style="margin: 0; padding: 0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../style/style.css">

    <!-- Agregados Favicon y Logo -->
    <!-- <link rel="icon" href="./img/favicon_io/favicon-32x32.png"> -->
    <link rel="icon" href="/img/faviconio-logo/logo.svg">

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu+Sans:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    
    <title>Editar Menu</title>
  </head>
  <body class="container-body">
    <!-- Inicio de NavBar -->
    <header id="header-content"></header>
    <!-- Fin de NavBar -->

    <!-- Inicio del login -->
  
    <div class="container-editar-form">
      <h1>Editar Menu</h1>
      <% if (menu) { %>
          <form action="/actualizar" method="POST" id="editar-form">
            <fieldset> 
              <input id="id_menu" name="id_menu" value="<%= menu.id_menu %>" hidden>
              <div>
                <label for="nom_menu">Nombre Menu</label>
                <input type="text" id="nom_menu" name="nom_menu" value="<%= menu.nom_menu %>">
              </div>
              <br>
              <!-- <div>
                <label for="estacion">Estación</label>
              <input type="text" id="estacion" name="estacion" value="<%= menu.id_estacion %>">
              </div> -->

              <div>
                <label for="estacion">Estación</label>
                <select name="estacion" id="estacion">
                  <option <%= menu.id_estacion==1 ? "selected" : '' %> value=1>verano</option>
                  <option <%= menu.id_estacion==2 ? "selected" : '' %> value=2>invierno</option>
                  <option <%= menu.id_estacion==3 ? "selected" : '' %> value=3>todas</option>
                </select>
              </div>

              <br>
              <!-- <div>
                <label for="tipo_comida">Tipo</label>
                <input type="text" id="tipo_comida" name="tipo_comida" value="<%= menu.id_tipo_comida %>">
              </div> -->

              <div>
                <label for="tipo_comida">Tipo</label>
                <select name="tipo_comida" id="tipo_comida">
                  <option <%= menu.id_tipo_comida==1 ? "selected" : '' %> value=1>comida</option>
                  <option <%= menu.id_tipo_comida==2 ? "selected" : '' %> value=2>postre</option>
                  <option <%= menu.id_tipo_comida==3 ? "selected" : '' %> value=3>snack</option>
                  <option <%= menu.id_tipo_comida==4 ? "selected" : '' %> value=4>infusión</option>
                </select>
              </div>

              <br>
              <div class="buttons editar-btns">
                <button type="submit" class="btn btn-primary btn-input">Guardar</button>
                <a href="/admin" type="button">Cancelar</a>
              </div>
            </fieldset>
          </form>
      <% } %>  
    </div>  

    <!-- Fin del login -->

    <!-- Inicio del pie -->
    <footer id="footer-content"></footer>
    <!-- Fin del pie -->
    
    <!-- Inicio de JS -->
    <script src="../js/header.js"></script>
    <script src="../js/menu-hamburguesa.js"></script>
    <!-- Fin de JS -->
  </body>
</html>